.navbar
  a.external
    color #2c3e00 !important
  a.external:hover
  a.home-link:hover span
    color $accentColor !important

.nav-links
  .nav-item:nth-child(1)
    display inline-block
    font-size 1.05rem
    padding 0.2rem 1.6rem
    transition background-color 0.1s ease
    color #fff
    background-color $accentColor
    border-radius 4px
    box-sizing border-box
    border-bottom 1px solid darken($accentColor, 20%)
    a.router-link-active
      color #fff !important
      text-decoration none !important
  .nav-item:nth-child(1):hover
    background-color lighten($accentColor, 8%)
    cursor pointer
    a
      color #fff !important
      text-decoration none !important


.home
  .hero
    img
      max-width none !important
      max-height 40rem !important
      margin 0 !important

  #main-title
    margin-top 0.5rem !important
    margin-bottom 0.5rem !important

  .description
    margin-top 0 !important

.home li,
.meta li
  list-style disc
  margin-left 0.4rem

.meta .theme-default-content:not(.custom) > h2
  margin-top 0
  padding-top 0

.home h1,
.home h2,
.meta h2
  margin-top 1.5rem !important
  margin-bottom 1rem !important

.meta ul
  padding 1rem

.appevents
  margin-top 1rem
  display -webkit-box
  flex-flow row wrap
  flex-direction row
  justify-content space-between
  align-content space-between
  list-style none

  li
    height 6rem
    width 6rem
    overflow hidden
    margin 0.5rem
    padding 0.5rem
    border-radius: 14px
  
  li:before
