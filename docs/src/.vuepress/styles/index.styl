.appevents
  margin-top 1rem
  display -webkit-box
  flex-flow row wrap
  flex-direction row
  justify-content space-between
  align-content space-between
  list-style none

  li
    height 6rem
    width 6rem
    overflow hidden
    margin 0.5rem
    padding 0.5rem
  
  li:before
    display inline-block
    font-size 0
    line-height 0

