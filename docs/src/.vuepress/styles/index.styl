.feature h2
  padding-left: 30px
  background-repeat: no-repeat
  background-position: 5px 5px

.feature:nth-child(1) h2
  background-image: url("/images/lnr-magic-wand.svg")

.feature:nth-child(2) h2
  background-image: url("/images/lnr-rocket.svg")

.feature:nth-child(3) h2
  background-image: url("/images/lnr-code.svg")

.headline
  padding-left: 1em
  background-repeat: no-repeat
  background-position: 0px 0.3em
  background-size: 0.7em
  filter: invert(48%) sepia(79%) saturate(2476%) hue-rotate(126deg) brightness(78%) contrast(119%);

.appfeatures-headline
  background-image: url("/images/lnr-highlight.svg")

.appintegrations-headline
  background-image: url("/images/lnr-plus-circle.svg")

.applanguages-headline
  background-image: url("/images/lnr-earth.svg")

.appusers-headline
  background-image: url("/images/lnr-users.svg")

.content-list
  margin-top 1rem

